<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/dice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidLineVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <ImageView
        android:id="@+id/dice_one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@+id/guidLine"
        app:layout_constraintBottom_toTopOf="@+id/guidLine"
        app:layout_constraintStart_toStartOf="@id/guidLineVertical"
        app:layout_constraintEnd_toStartOf="@id/guidLineVertical"
        android:src="@drawable/dice_one"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/dice_two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/dice_one"
        app:layout_constraintBottom_toBottomOf="@+id/dice_one"
        app:layout_constraintStart_toStartOf="@id/dice_one"
        android:src="@drawable/dice_two"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/dice_three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/dice_one"
        app:layout_constraintBottom_toBottomOf="@+id/dice_one"
        app:layout_constraintStart_toStartOf="@id/dice_one"
        android:src="@drawable/dice_three"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/dice_four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/dice_one"
        app:layout_constraintBottom_toBottomOf="@+id/dice_one"
        app:layout_constraintStart_toStartOf="@id/dice_one"
        android:src="@drawable/dice_four"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/dice_five"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/dice_one"
        app:layout_constraintBottom_toBottomOf="@+id/dice_one"
        app:layout_constraintStart_toStartOf="@id/dice_one"
        android:src="@drawable/dice_five"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/dice_six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/dice_one"
        app:layout_constraintBottom_toBottomOf="@+id/dice_one"
        app:layout_constraintStart_toStartOf="@id/dice_one"
        android:src="@drawable/dice_six"
        android:visibility="invisible"  />
    <ImageView
        android:id="@+id/dice1_one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@+id/dice_one"
        app:layout_constraintBottom_toTopOf="@id/dice_one"
        android:src="@drawable/dice_one"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/dice1_two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@+id/dice_one"
        app:layout_constraintBottom_toTopOf="@id/dice_one"
        android:src="@drawable/dice_two"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/dice1_three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@+id/dice_one"
        app:layout_constraintBottom_toTopOf="@id/dice_one"
        android:src="@drawable/dice_three"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/dice1_four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@+id/dice_one"
        app:layout_constraintBottom_toTopOf="@id/dice_one"
        android:src="@drawable/dice_four"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/dice1_five"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@+id/dice_one"
        app:layout_constraintBottom_toTopOf="@id/dice_one"
        android:src="@drawable/dice_five"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/dice1_six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@+id/dice_one"
        app:layout_constraintBottom_toTopOf="@id/dice_one"
        android:src="@drawable/dice_six"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btn_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/dice_six"
        app:layout_constraintTop_toBottomOf="@id/dice_six"
        android:layout_marginTop="32dp"
        android:background="@color/colorYellow"
        android:text="@string/roll_dice"
        android:textStyle="bold"
        android:textColor="@color/colorRed"/>
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/dice_six"
        app:layout_constraintTop_toBottomOf="@id/btn_roll"
        android:layout_marginTop="32dp"
        android:background="@color/colorYellow"
        android:text="@string/reset"
        android:textStyle="bold"
        android:textColor="@color/colorRed"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>